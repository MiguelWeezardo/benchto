data-sources:
  presto:
    url: jdbc:teradata://teradata-master
    username: test_presto_user
    password: test_presto_password
    driver-class-name: com.teradata.jdbc.TeraDriver

benchmark-service:
  url: http://localhost:8080

environment:
  name: DEFAULT

graphite:
  url: http://localhost:18088
  metrics:
    cpu: asPercent(sumSeries(hadoop-r3.HDPSlaves.*.cpu_{user,system,wio}),sumSeries(hadoop-r3.HDPSlaves.*.cpu_{aidle,idle,nice,system,user,wio}))
    memory: diffSeries(sumSeries(hadoop-r3.HDPSlaves.*.mem_total),sumSeries(hadoop-r3.HDPSlaves.*.mem_free))
    network: sumSeries(hadoop-r3.HDPSlaves.*.bytes_{in,out})
